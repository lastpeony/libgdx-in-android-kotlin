<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krytasoft.androidwithlibgdx.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:gravity="center"
        android:text="Libgdx is working on background ! This text is coming from Android Layout.Not libgdx."
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/openFlexBoxTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open FlexboxTest "
        android:layout_gravity="center"

        />

</FrameLayout>
